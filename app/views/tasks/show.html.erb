<div class="container">

  <p>
    <%= button_to get_status_label(@task), get_action_path(@task) %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= @task.title %>
  </p>
  <br>
  <p>
    <strong>Details:</strong>
    <%= @task.details %>
  </p>
  <br>
  <p>
    <strong>Assignee user:</strong>
    <%= @task.assignee_user.name %>
  </p>
  <br>
  <p>
    <strong>Reviewer user:</strong>
    <%= @task.reviewer_user.name %>
  </p>
  <br>
  <p>
    <strong>Created by user:</strong>
    <%= @task.created_by_user.name %>
  </p>
  <br>


  <%= link_to 'Edit', edit_task_path(@task) %> |
  <%= link_to 'Back', tasks_path %>

</div>